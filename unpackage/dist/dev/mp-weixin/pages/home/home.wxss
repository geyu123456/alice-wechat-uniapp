/* 水平间距 */
swiper {
  height: 400rpx;
}
swiper .swiper-item,
swiper image {
  width: 100%;
  height: 100%;
}
.goods_list {
  display: flex;
  flex-wrap: wrap;
}
.goods_list .goods_item {
  width: 45%;
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 15rpx;
  margin-bottom: 40rpx;
  border: 1rpx solid #cdd6d2;
  border-radius: 10rpx;
  /* box-shadow: 4rpx 4rpx 4rpx #707b8b; */
  position: relative;
  box-shadow: 0px 1px 5px #d0d0d0;
}
.goods_list .goods_item .goods-item-text {
  width: 100%;
  display: flex;
  flex-direction: column;
  align: left;
}
.goods_list .goods_item .goods-item-text text {
  font-size: 12px;
  margin: 8px;
}
.goods_list .goods_item .image {
  border-radius: 10rpx 10rpx 0 0;
  width: 100%;
  height: 300rpx;
  background-color: #eee;
}

